{
  "name": "svg-grouper",
  "version": "1.0.0",
  "description": "Desktop app for preparing SVG files for pen plotters - layer management, fill pattern hatching, path optimization, and export tools",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "package": "npm run build && electron-builder --mac",
    "package:win": "npm run build && electron-builder --win",
    "package:linux": "npm run build && electron-builder --linux",
    "package:all": "npm run build && electron-builder --mac --win --linux",
    "validate-svg": "node scripts/validate-svg.js"
  },
  "build": {
    "appId": "com.dirtybirdnj.svg-grouper",
    "productName": "SVG Grouper",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.graphics-design",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "universal"
          ]
        }
      ],
      "icon": "build/icon.icns"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icons",
      "category": "Graphics"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dirtybirdnj/svg-grouper.git"
  },
  "keywords": [
    "svg",
    "pen-plotter",
    "axidraw",
    "electron",
    "react",
    "vector-graphics",
    "hatching",
    "fill-patterns",
    "layer-management"
  ],
  "author": "Mat Gilbert",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/dirtybirdnj/svg-grouper/issues"
  },
  "homepage": "https://github.com/dirtybirdnj/svg-grouper#readme",
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "cheerio": "^1.1.2",
    "electron": "^39.2.1",
    "electron-builder": "^26.0.12",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "dependencies": {
    "font-color-contrast": "^11.1.0",
    "nanoid": "^5.1.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "simplify-js": "^1.2.4"
  }
}
